<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="Masked_Behaviour.MainPage">

    <VerticalStackLayout Padding="30,0,0,0" >
        <Label Text="Card Number" FontSize="Small" FontAttributes="Bold" />
        <Entry FontSize="Small" Keyboard="Numeric" Placeholder="XXXX XXXX XXXX XXXX" PlaceholderColor="DarkGray" HeightRequest="40" WidthRequest="200" 
               HorizontalOptions="StartAndExpand" >
            <Entry.Behaviors>
                <toolkit:MaskedBehavior Mask='XXXX XXXX XXXX XXXX'/>
            </Entry.Behaviors>
        </Entry>
    </VerticalStackLayout>
</ContentPage>
